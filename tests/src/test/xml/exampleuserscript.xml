<?xml version="1.0"?>
<ruleset xmlns="http://windup.jboss.org/v1/xml"
  id="xmlusertestrules_1"
>
  <rules>
    <rule>
      <when>
        <xmlfile xpath="/w:web-app/w:resource-ref/w:res-auth[text() = 'Container']">
        	<namespace prefix="w" uri="http://java.sun.com/xml/ns/javaee"/>
        </xmlfile>
      </when>
      <perform>
        <hint>
        	<message>User script Container Auth</message>
        </hint>
        <xslt description="User script XSLT Conversion" extension="userscript-converted-example.xml" xsltFile="exampleconversion_userdir.xslt"/>
      </perform>
    </rule>
  </rules>
</ruleset>